<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jakegrace.exercyse.Profile.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignBottom="@+id/imageLinear"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.rey.material.widget.TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:letterSpacing="0.025"
                    android:text="Name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/nullable"
                    app:civ_border_color="#a8a8a8"
                    app:civ_border_width="3dp"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.025"
                    android:text="Student"
                    android:textColor="@color/weekcolor"
                    android:textSize="14dp"/>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLinear">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/background"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="20dp"
                    android:background="#99A1AC"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etBio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/nullable"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="You haven't entered anything yet. Click here to edit."
                            android:letterSpacing="0.025"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="12dp"/>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="20dp"
                    android:background="#99A1AC"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.rey.material.widget.TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="7dp"
                            android:letterSpacing="0.025"
                            android:text="USERNAME"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/editUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/nullable"
                            android:gravity="center"
                            android:hint="username"
                            android:letterSpacing="0.025"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="12dp"
                            android:windowSoftInputMode="stateHidden"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="20dp"
                    android:background="#99A1AC"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.rey.material.widget.TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="7dp"
                            android:letterSpacing="0.025"
                            android:text="EMAIL"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14dp"/>

                        />

                        <EditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/nullable"
                            android:gravity="center"
                            android:hint="email"
                            android:letterSpacing="0.025"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="12dp"
                            android:windowSoftInputMode="stateHidden"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="20dp"
                    android:background="#99A1AC"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.rey.material.widget.TextView
                            android:id="@+id/tvAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="7dp"
                            android:letterSpacing="0.025"
                            android:text="AGE"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14dp" />
                        />

                        <EditText
                            android:id="@+id/editAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/nullable"
                            android:gravity="center"
                            android:hint="enter your age"
                            android:letterSpacing="0.025"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="12dp"
                            android:windowSoftInputMode="stateHidden"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="20dp"
                    android:background="#99A1AC"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.rey.material.widget.TextView
                            android:id="@+id/tvWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="7dp"
                            android:letterSpacing="0.025"
                            android:text="WEIGHT"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14dp" />
                        />

                        <EditText
                            android:id="@+id/editWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/nullable"
                            android:gravity="center"
                            android:hint="enter your weight"
                            android:letterSpacing="0.025"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="12dp"
                            android:windowSoftInputMode="stateHidden"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="20dp"
                    android:background="#99A1AC"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.rey.material.widget.TextView
                            android:id="@+id/tvHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="7dp"
                            android:letterSpacing="0.025"
                            android:text="HEIGHT"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="14dp" />
                        />

                        <EditText
                            android:id="@+id/editHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/nullable"
                            android:gravity="center"
                            android:hint="enter your height"
                            android:letterSpacing="0.025"
                            android:textAlignment="center"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="12dp"
                            android:windowSoftInputMode="stateHidden"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>